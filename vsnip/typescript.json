{
    "CDK Construct": {
        "prefix": [
            "cdk-construct"
        ],
        "body": [
            "import { Construct } from 'constructs'",
            "",
            "export interface ${1:ConstructorName}Props {",
            "",
            "}",
            "",
            "export class ${1:ConstructorName} extends Construct {",
            "  constructor (scope: Construct, id: string, props: ${1:ConstructorName}Props) {",
            "    super(scope, id)",
            "  }",
            "}"
        ],
        "description": "Generate a CDK Construct scaffold"
    },
    "CDK Stack": {
        "prefix": [
            "cdk-base-stack"
        ],
        "body": [
            "import { BaseStack, BaseStackProps } from '@poka-cdk/base-constructs'",
            "",
            "export interface ${1:ConstructorName}Props extends BaseStackProps {",
            "",
            "}",
            "",
            "export class ${1:ConstructorName} extends BaseStack {",
            "  constructor (scope: BaseStack, id: string, props: ${1:ConstructorName}Props) {",
            "    super(scope, id, props)",
            "  }",
            "}"
        ],
        "description": "Generate a CDK Stack scaffold"
    }
}
